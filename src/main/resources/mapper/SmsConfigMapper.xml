<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yht.demo.mapper.SmsConfigMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yht.demo.entity.SmsConfig">
        <id column="id" property="id" />
        <result column="sms_key" property="smsKey" />
        <result column="sms_value" property="smsValue" />
        <result column="create_time" property="createTime" />
        <result column="del_flag" property="delFlag" />
    </resultMap>

    <select id="getValueByKey" resultType="java.lang.String" parameterType="java.lang.String">
        SELECT
          sms_value
        FROM
          t_sms_config
        WHERE
          sms_key = #{key}
          limit 1
    </select>

</mapper>
